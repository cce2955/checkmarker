{
    "manifest_version": 3,
    "name": "Checkmarker",
    "version": "1.0",
    "description": "Extension description",
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
      "16": "./icons/16.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    },
    "action": {
      "default_title": "My Extension",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "./icons/16.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  